{
  "name": "my-app",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:staged": "next lint",
    "lint:style": "stylelint '*/.{css,scss,sass}' --fix",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pre-push": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,scss,sass}": [
      "prettier --write",
      "stylelint '*/.{css,scss,sass}' --fix"
    ]
  },
  "dependencies": {
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "^12.1.2",
    "next": "12.0.4",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "16.11.10",
    "@types/react": "17.0.37",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "7.32.0",
    "eslint-config-next": "12.0.4",
    "husky": "^7.0.4",
    "typescript": "^4.5.2"
  }
}